{
  "name": "codyfight-bots",
  "version": "1.0.0",
  "type": "module",
  "description": "Codyfight internal CAgent bots",
  "main": "src/main/index.ts",
  "repository": "https://github.com/zvimbalynas/codyfight-bots.git",
  "author": "Codyfight",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@3.6.4",
  "scripts": {
    "build": "rm -rf dist && tsc && npm run build:client && cp -R src/client/public dist/client/public",
    "dev:config": "node --loader ts-node/esm --watch src/server/server.ts",
    "dev:run-bots": "node --loader ts-node/esm --watch src/c-bots/c-bot-runner.ts",
    "dev:client": "tsc -p tsconfig.client.json --watch",
    "start:config": "node dist/server/server.js",
    "start:run-bots": "node dist/c-bots/c-bot-runner.js",
    "build:client": "tsc -p tsconfig.client.json",
    "pre-commit": "npm run format && npm run lint",
    "lint": "npm run eslint --ext .js,.ts,.cjs,.mjs ./src && tsc --noEmit",
    "format": "npm run prettier --config ./.prettierrc './src/**/*.ts' --write",
    "heroku-postbuild": "npm install && npm run build"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": ">=12.0.0",
    "@types/pg": "^8.11.10",
    "@types/sqlite3": "^3.1.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "ts-node": "^10.9.1",
    "typescript": ">=5.0.0"
  },
  "dependencies": {
    "codyfight-game-client": "^1.2.14",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-jwt": "^8.5.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.12.0",
    "pg": "^8.13.1",
    "prettier": "^3.4.1",
    "sqlite3": "^5.1.7"
  }
}
